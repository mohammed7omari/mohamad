@using WebMatrix.Data
@{
    var db = Database.Open("students");
    var selectData = db.Query("SELECT * FROM [dbo].[mohamad]");
    var grid = new WebGrid(source: selectData);
}
<!DOCTYPE html>
<html>
<head>

    <title>view page </title>
    <style type="text/css">
        .grid {
            margin: 4px;
            border-collapse: collapse;
            width: 600px;
        }

            .grid th, .grid td {
                border: 1px solid #C0C0C0;
                padding: 5px;
            }

        .head {
            background-color: #E8E8E8;
            font-weight: bold;
            color: #FFF;
        }

        .alt {
            background-color: #E8E8E8;
            color: #000;
        }
    </style>
</head>
<body>
    <h1>view page (display persons information)</h1>
    <div>
        @grid.GetHtml(
                 tableStyle: "grid",
          headerStyle: "head",
          alternatingRowStyle: "alt")
    </div>

</body>
</html>